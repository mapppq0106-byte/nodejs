<div class="auth-wrapper">
    <div class="auth-container" style="max-width: 600px;">
        <h2>Chỉnh Sửa Thông Tin Sách</h2>
        <form action="/admin/edit/{{book.id}}" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Tiêu đề sách</label>
                <input type="text" name="title" class="form-input" value="{{book.title}}" required>
            </div>
            <div class="form-group">
                <label>Tác giả</label>
                <input type="text" name="author" class="form-input" value="{{book.author}}" required>
            </div>

            <div class="form-group">
                <label>Danh mục sách</label>
                <select name="category_id" class="form-input" required>
                    <option value="">-- Chọn danh mục --</option>
                    {{#each categories}}
                        {{!-- So sánh ID danh mục với ID của sách đang có --}}
                        <option value="{{this.id}}" {{#if (eq this.id ../book.category_id)}}selected{{/if}}>
                            {{this.name}}
                        </option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>Mã ISBN</label>
                <input type="text" name="isbn" class="form-input" value="{{book.isbn}}">
            </div>
            <div class="form-group">
                <label>Giá (VNĐ)</label>
                <input type="number" name="price" class="form-input" value="{{book.price}}" required>
            </div>
            <div class="form-group">
                <label>Ảnh bìa hiện tại</label>
                <div style="margin-bottom: 10px;">
                    <img src="/img/{{book.image_url}}" alt="{{book.title}}" style="width: 100px; border-radius: 8px;">
                </div>
                <label>Thay đổi ảnh mới (Để trống nếu giữ nguyên)</label>
                <input type="file" name="image" class="form-input" accept="image/*">
            </div>
            <div class="form-group">
                <label>Mô tả sách</label>
                <textarea name="description" class="form-input" rows="5">{{book.description}}</textarea>
            </div>
            
            <div style="display: flex; gap: 15px;">
                <button type="submit" class="btn-auth">CẬP NHẬT</button>
                <a href="/admin" class="btn-logout-nav" style="text-align: center; flex: 1; line-height: 25px;">HỦY BỎ</a>
            </div>
        </form>
    </div>
</div>