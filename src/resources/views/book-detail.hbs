<div class="container" style="margin-top: 30px;">
    <div style="display: flex; gap: 40px; align-items: flex-start;">
        <img src="/img/{{book.image_url}}" alt="{{book.title}}" style="width: 300px; border-radius: 8px; border: 1px solid #333;">
        <div style="flex: 1;">
            <h1 style="margin-bottom: 10px;">{{book.title}}</h1>
            <p style="color: #bbb; font-size: 1.1rem;">Tác giả: <strong>{{book.author}}</strong></p>
            <p style="color: #bbb;">ISBN: {{book.isbn}}</p>
            <p style="font-size: 1.5rem; color: #fff; margin: 15px 0;">{{book.price}} VNĐ</p>
            <div style="background: #1e1e1e; padding: 20px; border-radius: 8px; border: 1px solid #333;">
                <h4 style="margin-bottom: 10px;">Mô tả nội dung:</h4>
                <p style="color: #ccc; line-height: 1.6;">{{book.description}}</p>
            </div>
        </div>
    </div>

    <hr style="margin: 40px 0; border: 0.5px solid #333;">

    <section>
        <h3 style="margin-bottom: 20px;">Đánh giá từ cộng đồng</h3>
        
        <div class="reviews-list">
            {{#each reviews}}
                <div style="padding: 15px; background: #1a1a1a; border: 1px solid #333; border-radius: 8px; margin-bottom: 15px;">
                    <p><strong>{{this.username}}</strong> - <span style="color: #ffcc00;">{{this.rating}} ★</span></p>
                    <p style="color: #ddd; margin-top: 5px;">{{this.comment}}</p>
                </div>
            {{else}}
                <p style="color: #888; text-align: center;">Cuốn sách này chưa có đánh giá nào.</p>
            {{/each}}
        </div>
    </section>
</div>