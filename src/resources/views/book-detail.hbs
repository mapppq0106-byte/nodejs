<div class="container" style="margin-top: 30px;">
    <div style="display: flex; gap: 40px; align-items: flex-start;">
        <img src="/img/{{book.image_url}}" alt="{{book.title}}" style="width: 300px; border-radius: 12px; border: 1px solid rgba(255,255,255,0.1);"> 
        <div style="flex: 1;">
            <h1 style="margin-bottom: 3px;">{{book.title}}</h1> 

            <p style="color: #000000; font-size: 1.1rem;">Tác giả: <strong>{{book.author}}</strong></p> 

            {{!-- THÊM DÒNG NÀY --}}
            <p><strong>Danh mục:</strong> <span class="badge-category">{{book.category_name}}</span></p>

            <p style="color: #000000;">ISBN: {{book.isbn}}</p> 
            
            <p style="color: #000000; font-size: 0.9rem;">Ngày xuất bản: {{book.published_date}}</p>

            <p style="color: #000000; font-size: 0.9rem;">Lượt xem: {{book.view_count}}</p>

            <div style="margin-top: 20px;">
                <a href="/book/{{book.id}}/read" class="btn-auth" style="text-decoration:none; background: #28a745;">ĐỌC SÁCH NGAY</a>
            </div>
            
            <p style="font-size: 1.8rem; color: #4da3ff; margin: 15px 0; font-weight: 700;">{{book.price}} VNĐ</p> 
            <div style="background: rgba(0, 0, 0, 0.03); padding: 20px; border-radius: 12px; border: 1px solid rgba(255,255,255,0.1);"> 
                <h4 style="margin-bottom: 10px; color: #000000;">Mô tả nội dung:</h4> 
                <p style="color: #000000; line-height: 1.6;">{{book.description}}</p> 
            </div>
        </div>
    </div>

    <hr style="margin: 40px 0; border: 0.5px solid #000000;"> 

    <section class="reviews-section">
        <h3 style="margin-bottom: 25px; font-size: 1.5rem;">Đánh giá từ cộng đồng</h3> 
        
        {{#if user}}
            {{#if hasReviewed}}
                <div style="background: rgba(0, 0, 0, 0.1); border: 1px solid rgba(77, 163, 255, 0.2); padding: 15px; border-radius: 10px; color: #4da3ff; margin-bottom: 30px;"> 
                    <i class="fas fa-check-circle"></i> Bạn đã gửi đánh giá cho cuốn sách này. 
                </div>
            {{else}}
                <form action="/book/{{book.id}}/review" method="POST" style="background: rgba(0, 0, 0, 0.02); padding: 25px; border-radius: 15px; border: 1px solid rgba(255,255,255,0.05); margin-bottom: 40px;"> 
                    <div class="form-group" style="margin-bottom: 15px;"> 
                        <label style="display: block; margin-bottom: 8px;">Mức độ hài lòng:</label> 
                        <select name="rating" class="form-input" style="width: auto; min-width: 120px;"> 
                            <option value="5">5 Sao ⭐⭐⭐⭐⭐</option> 
                            <option value="4">4 Sao ⭐⭐⭐⭐</option> 
                            <option value="3">3 Sao ⭐⭐⭐</option> 
                            <option value="2">2 Sao ⭐⭐</option> 
                            <option value="1">1 Sao ⭐</option> 
                        </select>
                    </div> 
                    <div class="form-group" style="margin-bottom: 20px;"> 
                        <label style="display: block; margin-bottom: 8px;">Nhận xét chi tiết:</label> 
                        <textarea name="comment" class="form-input" rows="4" placeholder="Chia sẻ cảm nghĩ của bạn..." required></textarea> 
                    </div>
                    <button type="submit" class="btn-auth" style="width: auto; padding: 10px 30px;">Gửi Đánh Giá</button> 
                </form>
            {{/if}}
        {{else}}
            <p style="margin-bottom: 30px; color: #000000;">Bạn cần <a href="/login" style="color: #4da3ff; text-decoration: none;">đăng nhập</a> để gửi đánh giá.</p> 
        {{/if}}

        <div class="reviews-list">
            {{#each reviews}}
                <div style="padding: 20px; background: rgba(0, 0, 0, 0.03); border-radius: 12px; margin-bottom: 15px; border: 1px solid rgba(255,255,255,0.05);"> 
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;"> 
                        <strong style="color: #000000; font-size: 1.1rem;">{{this.username}}</strong> 
                        <span style="color: #ffcc00; font-weight: bold;">{{this.rating}} ⭐</span> 
                    </div>
                    <p style="color: #000000; font-style: italic; font-size: 0.9rem; margin-bottom: 10px;">Ngày: {{this.created_at}}</p> 
                    <p style="color: #000000; line-height: 1.5;">{{this.comment}}</p> 
                </div>
            {{else}}
                <p style="color: #000000; text-align: center; padding: 40px;">Cuốn sách này chưa có đánh giá nào.</p> 
            {{/each}}
        </div>
    </section>
</div>