<div class="container">
    <h1 style="text-align: center; margin-bottom: 40px;">Thư Viện Sách</h1>
    <div class="book-grid">
        {{#each books}}
        <div class="book-card">
            <div class="book-image">
                <img src="/img/{{this.image_url}}" alt="{{this.title}}">
            </div>
            <div class="book-info">
                <h3 class="book-title">{{this.title}}</h3>
                <p class="book-author">Tác giả: {{this.author}}</p>
                <p class="book-price">{{this.price}} VNĐ</p>
                <p style="font-size: 0.85rem; color: #aaa;">{{this.description}}</p>
                <button class="btn-auth" style="margin-top: auto; padding: 8px;">Chi tiết</button>
            </div>
        </div>
        {{/each}}
    </div>
</div>